{
  "version": "0.1.0",
  "name": "codebattle",
  "instructions": [
    {
      "name": "initializeWager",
      "accounts": [
        { "name": "player1",       "isMut": true,  "isSigner": true  },
        { "name": "authority",     "isMut": false, "isSigner": false },
        { "name": "wager",         "isMut": true,  "isSigner": false,
          "pda": { "seeds": [
            { "kind": "const",  "type": "bytes", "value": [119,97,103,101,114] },
            { "kind": "arg",    "type": "string","path": "roomId" }
          ]}
        },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "roomId", "type": "string" },
        { "name": "amount", "type": "u64"    }
      ]
    },
    {
      "name": "joinWager",
      "accounts": [
        { "name": "player2",       "isMut": true,  "isSigner": true  },
        { "name": "wager",         "isMut": true,  "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": []
    },
    {
      "name": "declareWinner",
      "accounts": [
        { "name": "authority",     "isMut": true,  "isSigner": true  },
        { "name": "player1",       "isMut": true,  "isSigner": false },
        { "name": "player2",       "isMut": true,  "isSigner": false },
        { "name": "wager",         "isMut": true,  "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "winner", "type": "publicKey" }
      ]
    },
    {
      "name": "cancelWager",
      "accounts": [
        { "name": "authority",     "isMut": true,  "isSigner": true  },
        { "name": "player1",       "isMut": true,  "isSigner": false },
        { "name": "player2",       "isMut": true,  "isSigner": false },
        { "name": "wager",         "isMut": true,  "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": []
    }
  ],
  "accounts": [
    {
      "name": "WagerEscrow",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "roomId",    "type": "string"                          },
          { "name": "player1",   "type": "publicKey"                       },
          { "name": "player2",   "type": "publicKey"                       },
          { "name": "amount",    "type": "u64"                             },
          { "name": "state",     "type": { "defined": "WagerState" }       },
          { "name": "authority", "type": "publicKey"                       },
          { "name": "bump",      "type": "u8"                              }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "WagerState",
      "type": {
        "kind": "enum",
        "variants": [
          { "name": "WaitingForPlayer2" },
          { "name": "Active"            },
          { "name": "Completed"         },
          { "name": "Cancelled"         }
        ]
      }
    }
  ],
  "events": [
    {
      "name": "WagerCreated",
      "fields": [
        { "name": "roomId",  "type": "string",    "index": false },
        { "name": "player1", "type": "publicKey", "index": false },
        { "name": "amount",  "type": "u64",       "index": false }
      ]
    },
    {
      "name": "WinnerDeclared",
      "fields": [
        { "name": "roomId",  "type": "string",    "index": false },
        { "name": "winner",  "type": "publicKey", "index": false },
        { "name": "payout",  "type": "u64",       "index": false }
      ]
    }
  ],
  "errors": [
    { "code": 6000, "name": "InvalidState",   "msg": "Invalid wager state for this operation"      },
    { "code": 6001, "name": "SamePlayer",     "msg": "Both players cannot be the same wallet"      },
    { "code": 6002, "name": "InvalidWinner",  "msg": "Winner must be one of the two players"       },
    { "code": 6003, "name": "AmountTooSmall", "msg": "Wager amount too small (min 0.001 SOL)"      },
    { "code": 6004, "name": "RoomIdTooLong",  "msg": "Room ID exceeds maximum length"              },
    { "code": 6005, "name": "Unauthorized",   "msg": "Only the designated authority can call this" }
  ],
  "metadata": {
    "address": "7vfCXTUXx5WJV5JADk17DUJ4ksgau7utNKj4b963voxs"
  }
}
